
<!DOCTYPE html>
<html>
  <head>
    <title>Users index page</title>
  </head>
  <body>
    <h1>Users</h1>
    <table>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Age</th>
      </tr>
      <% if @users.any? %>
        <% @users.each do |user| %>
          <tr>
            <td><%= user["firstname"] %></td>
            <td><%= user["lastname"] %></td>
            <td><%= user["email"] %></td>
            <td><%= user["age"] %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="4">No users found.</td>
        </tr>
      <% end %>
    </table>
  </body>
</html>
